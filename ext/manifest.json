{
  "manifest_version": 2,

  "name": "DOMPurify",
  "description": "This extension purifies fragment id of current URL",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Title"
  },
  
  "background": {
    "scripts": [
        "eventPage.js",
        "purify.js"
        ],
    "persistent": false
  },
  
  "options_page": "options.html",
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ]
}
